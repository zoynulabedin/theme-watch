// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model ThemeComparison {
  id            String     @id @default(uuid())
  shop          String
  title         String
  sourceThemeId String
  sourceTheme   ThemeInfo  @relation("SourceTheme", fields: [sourceThemeId], references: [id])
  targetThemeId String
  targetTheme   ThemeInfo  @relation("TargetTheme", fields: [targetThemeId], references: [id])
  createdAt     DateTime   @default(now())
  differences   Int        @default(0)
  files         String    
  diffContents  String     
  results       ComparisonResult[]
}

model ComparisonResult {
  id                String          @id @default(uuid())
  comparisonId     String
  comparison       ThemeComparison  @relation(fields: [comparisonId], references: [id])
  fileName         String
  sourceContent    String          // Content from source theme
  targetContent    String          // Content from target theme
  createdAt        DateTime        @default(now())
}


// Theme information as a separate model for SQLite compatibility
model ThemeInfo {
  id            String             @id @default(uuid())
  name          String
  role          String?
  sourceOf      ThemeComparison[]  @relation("SourceTheme")
  targetOf      ThemeComparison[]  @relation("TargetTheme")
}
